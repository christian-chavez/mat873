% ---- knobs ----
\newcommand{\esvArrowSize}{17.28}   % try 12, 13, 14, 15 ...
\newcommand{\esvArrowDrop}{0.26ex} % increase to move DOWN
\newcommand{\esvHeadJoinKern}{-1.5mu} % tighten/loosen joins
% --------------

% typeset ONE esvect glyph at explicit size (no scaling transform)
\newcommand{\esvGlyph}[1]{%
  \raisebox{-\esvArrowDrop}{%
    \hbox{%
      \usefont{U}{esvect}{m}{n}\fontsize{\esvArrowSize}{\esvArrowSize}\selectfont
      \char#1%
    }%
  }%
}

% fixed-width fill (same esvect idea: start cap + leaders + head)
\def\esvFixedFill@#1{%
  \hbox to #1{$\m@th
    \mkern2mu
    \mathord{\esvGlyph{'043}}% start cap
    \mkern\esvHeadJoinKern
    \cleaders\hbox{$\m@th\mathord{\esvGlyph{'040}}$}\hfill% fill
    \mkern\esvHeadJoinKern
    \mathord{\esvGlyph{'026}}% head (option f)
  $}%
}

% how long you want the arrow. 
% 1.8 imitates the length of Assem's Basic rep theory yellow book
\newcommand{\farrow}{\mathrel{\esvFixedFill@{1.4em}}}
\newcommand{\esvlongto}{\mathrel{\esvFixedFill@{3.0em}}}

\makeatother
\renewcommand{\to}{\farrow}

